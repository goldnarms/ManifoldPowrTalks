      </uap:VisualElements>
      
      <uap:ApplicationContentUriRules>
        <uap:Rule Type="include" Match="http://powertalks.azurewebsites.net/" />
      </uap:ApplicationContentUriRules>
    </Application>
  </Applications>

  <Capabilities>
    <Capability Name="internetClient" />
  </Capabilities>

</Package>
