  <Dependencies>
    <TargetPlatform Name="Windows.Universal" MinVersion="10.0.10030.0" MaxVersionTested="10.0.10030.0" />
  </Dependencies>

  <Resources>
    <Resource Language="x-generate" />
  </Resources>

  <Applications>
    <Application
      Id="PowrTalks"
      StartPage="http://powertalks.azurewebsites.net/">

      <uap:VisualElements
        DisplayName="PowrTalks"
